<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_blue_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.helpdroid1223.AboutFsai">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="660dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:textSize="28sp"
                android:text="       Help Droid "
                android:textColor="@android:color/white"
                android:typeface="monospace"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="73dp" />

            <TextView
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25sp"
                android:typeface="serif"
                android:gravity="start|top"
                android:textColor="@android:color/white"
                android:text="This is an semi-automatic help based app.This app is build to help people who are in emergency situation. "
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="73dp" />


            <TextView
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25sp"
                android:typeface="serif"
                android:gravity="start|top"
                android:textColor="@android:color/white"
                android:text="This app will assist the people who are in Emergency Situations Like If Someone is after them,They just have to press the THE PANIC Button in the app and their location will be shared with the three people they have in their contact and with police. Like that on different situation this app act like that "
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="73dp" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/contact_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts of Developers"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
